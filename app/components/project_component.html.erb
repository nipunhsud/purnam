<%= link_to project_path(@project) do %>
  <div id="<%= dom_id @project %>" class="border <%= @border_color %> rounded-xl py-4 px-6 <%= @hover_color %>">
    <p>
      <h5 class="font-bold text-xl flex items-center gap-4">
        <span class="<%= @text_color %>"><%= @project.name %></span>
        <button class="text-xs font-medium rounded-full px-2 py-1 border <%= "#{@bg_color} #{@border_color} #{@text_color}" %>">
          <%= ProjectCollaborator.roles.key(@project.role).titleize %>
        </button>
      </h5>
      <p><%= @project.description %></p>
    </p>

    <h5 class="font-semibold mt-4 mb-2.5">Project Duration</h5>
    <div class="flex gap-2.5 items-center">
      <%= component DateEventComponent, date: @project.start_date, color: :emerald %>
      <span>to</span>
      <%= component DateEventComponent, date: @project.end_date, color: :rose %>
    </div>
  </div>
<% end %>
