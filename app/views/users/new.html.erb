<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl"><%= t '.title' %></h1>

<%= form_with(model: @user, class: "contents") do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="bg-danger-50 text-danger-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :email_address %>
    <%= form.email_field :email_address, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", placeholder: "Enter your email" %>
  </div>

  <div class="my-5">
    <%= form.label :password %>
    <%= form.password_field :password, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", placeholder: "Enter your password" %>
  </div>

  <%= form.fields_for :account, @user.build_account do |f| %>
    <div class="my-5">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", placeholder: "Enter your first name" %>
    </div>

    <div class="my-5">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", placeholder: "Enter your last name" %>
    </div>
  <% end %>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-primary-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
</div>
