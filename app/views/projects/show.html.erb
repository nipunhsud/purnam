<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div id="<%= dom_id @project %>">
      <p class="my-5">
        <strong class="block font-medium mb-1">Name:</strong>
        <%= @project.name %>
      </p>
    </div>

    <h4 class="text-2xl font-bold my-2.5">Collaborators</h4>
    <div id="project_collaborators" class="flex flex-col gap-2.5">
      <%= components CollaboratorComponent, @collaborators %>
    </div>
  </div>
</div>
