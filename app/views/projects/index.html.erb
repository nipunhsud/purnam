<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Projects" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Projects</h1>
    <%= link_to "New project", new_project_path, class: "btn-primary", data: { turbo_frame: :new_project, turbo_stream: true } %>
  </div>

  <%= turbo_frame_tag :new_project %>

  <div id="projects" class="min-w-full flex flex-col gap-2.5 my-4">
    <%= components ProjectComponent, @projects %>
  </div>
</div>
