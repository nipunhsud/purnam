<%= form_with(model: [@project, project_stakeholder], class: "contents") do |form| %>
  <% if project_stakeholder.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(project_stakeholder.errors.count, "error") %> prohibited this project_stakeholder from being saved:</h2>

      <ul>
        <% project_stakeholder.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :account_id %>
    <%= form.select :account_id, accounts_options(accounts: @accounts, selected_account_id: project_stakeholder.account_id), {}, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-primary-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
