<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Project collaborators" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Project collaborators</h1>
    <%= link_to "New project collaborator", new_project_collaborator_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="project_collaborators" class="min-w-full">
    <% @project_collaborators.each do |project_collaborator| %>
      <%= render project_collaborator %>
      <p>
        <%= link_to "Show this project collaborator", project_collaborator, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
